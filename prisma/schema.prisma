generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Post {
  id          Int      @id @default(autoincrement())
  title       String
  image       String   @default("") // Default to an empty string
  description String   @default("") // Default to an empty string
  date        DateTime @default(now()) // Default to the current date and time
  author      String?
}

